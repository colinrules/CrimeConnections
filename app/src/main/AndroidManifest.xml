<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crimeconnections.crimeconnections">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".State2"
            android:label="@string/title_activity_state2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".State3_errorstate"
            android:label="@string/title_activity_state3_errorstate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".State4"
            android:label="@string/title_activity_state4"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>