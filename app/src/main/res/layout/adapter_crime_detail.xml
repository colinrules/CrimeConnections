<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/occurence_date"/>
    <TextView
        android:layout_below="@+id/occurence_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/occurence_address"/>
    <TextView
        android:layout_below="@+id/occurence_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/occurence_place_name"/>
    <TextView
        android:layout_below="@+id/occurence_place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/occurence_type"/>
</RelativeLayout>